<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/654ad14aa3.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <div class="container">

          <a class="navbar-brand" href="/">Bookers</a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to content_tag(:i, ' Home', class: 'fa fa-home'), user_path(current_user.id), class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag(:i, ' Users', class: 'fa fa-users'), about_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag(:i, ' Books', class: 'fa fa-book-open'), new_user_registration_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag(:i, ' logout', class: 'fa fa-sign-out-alt'), destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to content_tag(:i, ' Home', class: 'fa fa-home'), root_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag(:i, ' About', class: 'fa fa-link'), about_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag(:i, ' sign up', class: 'fa fa-user-plus'), new_user_registration_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to content_tag(:i, ' login', class: 'fa fa-sign-in-alt'), new_user_session_path, class: 'nav-link text-light' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
  </body>
</html>
