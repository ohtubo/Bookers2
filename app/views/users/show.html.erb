<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<div class="container px-5 px-sm-0">
<%= render 'layouts/error_form_book', book: @book %>
  <div class="row">

      <%= render 'layouts/user_form', book: @book ,user: @user %>

      <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <th><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" , size: "40x40"%></th>
                <td><%= link_to book.title, "/books/#{book.id}" %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</div>